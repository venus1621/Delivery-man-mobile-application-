{
  "expo": {
    "name": "Gebeta Delivery",
    "slug": "delivery-mobile-application-",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gebetadelivery",
    "userInterfaceStyle": "automatic",
    "owner": "geneta1621",
    "newArchEnabled": true,
    "description": "Professional delivery driver application for Gebeta Delivery Service. Track orders, navigate to destinations, and manage deliveries efficiently.",
    "privacy": "public",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.geneta1621.deliveryapp",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to scan QR codes for order verification.",
        "NSLocationWhenInUseUsageDescription": "We use your location to deliver orders to your exact destination.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "android": {
      "package": "com.delivery.gebeta",
      "versionCode": 1,
      "permissions": [
        "VIBRATE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "WAKE_LOCK",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./android/app/google-services.json",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "delivery.gebeta.com",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        },
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "delivery.gebeta.com",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      },
      "runtimeVersion": "1.0.0"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://delivery.gebeta.com/"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Gebeta Delivery to use your location to provide delivery services and navigation.",
          "locationWhenInUsePermission": "Allow Gebeta Delivery to access your location while delivering orders.",
          "locationAlwaysPermission": "Allow Gebeta Delivery to track your location in the background for real-time delivery updates and customer tracking.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Gebeta Delivery to access your camera to scan QR codes for order verification and proof of delivery."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": false,
            "compileSdkVersion": 36,
            "targetSdkVersion": 36,
            "minSdkVersion": 24,
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "extraMavenRepos": [
              "https://maven.google.com"
            ],
            "enableMinifyInReleaseBuilds": true
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-web-browser",
      "expo-audio",
      "expo-video"
    ],
    "assetBundlePatterns": [
      "assets/images/**/*",
      "assets/fonts/**/*"
    ],
    "extra": {
      "router": {
        "origin": "https://delivery.gebeta.com/"
      },
      "eas": {
        "projectId": "2b8064e1-7413-4c4e-8225-4395119e6fe2"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/a1342bd9-7823-4284-9bc1-a70e0ce44fd9"
    }
  }
}
