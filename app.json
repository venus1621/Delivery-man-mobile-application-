{
  "expo": {
    "name": "Delivery Application for Gebeta Delivery Service",
    "slug": "delivery-application-gebeta",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gebetadelivery",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.venus1621.deliveryapp",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to scan QR codes for order verification.",
        "NSLocationWhenInUseUsageDescription": "We use your location to deliver orders to your exact destination.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.delivery.gebeta",
      "versionCode": 1,
      "permissions": [
        "VIBRATE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./android/app/google-services.json",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "delivery.gebeta.com",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://delivery.gebeta.com/"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to provide delivery services and navigation."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan QR codes for order verification."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": false,
            "compileSdkVersion": 36,
            "targetSdkVersion": 36,
            "minSdkVersion": 24,
            "extraMavenRepos": [
              "https://maven.google.com"
            ]
          }
        }
      ],
      "expo-web-browser",
      "expo-audio",
      "expo-video"
    ],
    "assetBundlePatterns": [
      "assets/images/**/*",
      "assets/fonts/**/*"
    ],
    "extra": {
      "router": {
        "origin": "https://delivery.gebeta.com/"
      },
      "eas": {
        "projectId": "a1342bd9-7823-4284-9bc1-a70e0ce44fd9"
      }
    }
  }
}
