{
  "expo": {
    "name": "Gebeta Delivery",
    "slug": "delivery-mobile-application-",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gebetadelivery",
    "userInterfaceStyle": "automatic",

    "newArchEnabled": true,

    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.geneta1621.deliveryapp",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera is required for QR code scanning.",
        "NSLocationWhenInUseUsageDescription": "Location is used for navigation and delivery tracking.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },

    "android": {
      "package": "com.delivery.gebeta",
      "versionCode": 1,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "WAKE_LOCK",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "delivery.gebeta.com",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      },
      "runtimeVersion": "1.0.0"
    },

    "web": {
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      ["expo-router", { "origin": "https://delivery.gebeta.com/" }],
      ["expo-location", { "isAndroidBackgroundLocationEnabled": true }],
      ["expo-camera"],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 23
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      "expo-web-browser"
    ],

    "assetBundlePatterns": [
      "assets/images/**/*",
      "assets/fonts/**/*"
    ],

    "extra": {
      "router": {
        "origin": "https://delivery.gebeta.com/"
      },
      "eas": {
        "projectId": "2b8064e1-7413-4c4e-8225-4395119e6fe2"
      }
    },

    "updates": {
      "url": "https://u.expo.dev/a1342bd9-7823-4284-9bc1-a70e0ce44fd9"
    }
  }
}
